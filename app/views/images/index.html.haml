.container
  .row.p-a-1#judge-window
    .col-lg-12.text-xs-center#judge-image
      - if @image.is_a?(S3Image)
        = image_tag_for_s3_image(@image)
      - elsif @image.is_a?(LocalImage)
        = image_tag_for_local_image(@image)
    .col-lg-12.text-xs-center
      .row
        - Image.categories.except(:unknown).each do |category, _|
          .col-lg-12.m-t-1
            = link_to category, images_judge_path(image_id: @image.id, category: category), class: 'btn btn-judge btn-lg btn-primary'
